    .video-container
      %video{autoplay:"true", loop:"true", width:"1280", height:"720"}
        %source{src:"/videos/chicken/chicken.mp4", typ:"video/mp4"}
    .row.full-height.middle-xs.center-xs.relative.up#home
      .col-xs-12
        .box.white-text
          %img{src:"imgs/logo.png", width:"200"}
          %h1.dancing-script.title.no-margin Just Chicken
          %p#is-open
            %i.glyphicon.glyphicon-time
            Open Now
      %nav.fixed.top.right.navigation.white-text#navigation
        %ul.list-inline
          %li 
            %a Home
          %li
            %a Menu
          %li
            %a Gallery
          %li
            %a Contact
          %li
            %a How to get
      .absolute.large-padding.white-text.full-width#description
        .row.middle-xs.center-xs
          .col-xs-7.col-sm-6.medium
            Flavor, Quality and Good Service
          .col-xs.hidden#sticky-navigation
            .box
              %nav.text-right.navigation
                %ul.list-inline
                  %li 
                    %a Home
                  %li
                    %a Menu
                  %li
                    %a Gallery
                  %li
                    %a Contact
                  %li
                    %a How to get

    .text-center.relative#menu
      .absolute.white.brown-text#menu-title
        %h2.dancing-script.title Menu
      -photos_menu = [{name:"Buffalo Wings", princing: "15.00", image:"buffalowings"},{name:"Chicken Gourmet", princing: "15.00", image:"chickengourmet"},{name:"Chicken Fried", princing: "15.00", image:"chickenfried"},{name:"Chicken Gourmet", princing: "15.00", image:"chickengourmet"},{name:"Chicken Lada", princing: "15.00", image:"chickenlada"},{name:"Buffalo Wings", princing: "15.00", image:"buffalowings"},{name:"Chicken Souce", princing: "15.00", image:"chickensouce"},{name:"Chicken Fried", princing: "15.00", image:"chickenfried"}]

      .row
        -photos_menu.each do |photo|
          .col-md-4.col-lg-3.col-sm-6.col-xs-12.food{style:"background-image:url(/imgs/food/#{photo[:image]}-thumb.jpg)"}

            .screen 
              .row.middle-xs.full-height
                .col-xs-12
                  %h3.dancing-script.subtitle= photo[:name]
                  %p.no-margin= photo[:princing] + " USD"
    #gallery
      .inner
        -gallery_images.each do |image|
          .image{style:"background-image:url(/imgs/food/#{image}.jpg);"}   
          
    .container
      .card.white.black-text.text-center.relative
        %h3.medium.slim
          In
          %strong.dancing-script.brown-text.medium Just Chicken
          we prepare the best chicken and at your leisure. It's our 
          %strong.dancing-script.brown-text.medium art
